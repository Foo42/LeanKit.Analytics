@model LeanKit.ReleaseManager.Controllers.UpcomingReleasesViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LeanKit.Release Manager</title>
    
    <style type="text/css">
        body { font-family: arial }

        #lanes, #releases { margin: 0;padding: 0;list-style: none; }

        .column-header { font-weight: bold; }

        .lane-column { width: 160px;display: inline-block;padding: 5px;vertical-align: top; }

        .ticket { margin-top: 5px;border-radius: 5px;background-color: #ddd;padding: 5px;cursor: pointer;font-size: 0.9em; }

        .ticket-id { font-weight: bold; }

        .ticket-approvals { margin: 0;padding: 0;list-style: none; }

        .ticket-approvals > li { display: inline-block;color: red; }

        .release-entry { min-height: 25px;margin-bottom: 5px;position: relative;padding: 3px 0 0 30px; }

        .legend-block { width: 25px;height: 25px;background-color: #000;position: absolute;top: 0;left: 0px;line-height: 25px; }

        #day-selector { margin: 0;padding: 0;list-style: none; }

        #day-selector > li { width: 100px;height: 60px;padding-top: 40px;background-color: #ddd;display: inline-block;border-radius: 25px;text-align: center;cursor: pointer; }
    </style>
</head>
<body>
    <div>
        <h1>Upcoming Releases</h1>
        
        @if (Model.Releases.Any())
        {
            <ul id="releases">
                @foreach (var release in Model.Releases)
                {
                    <li class="release-entry">
                        <div class="legend-block" style="background-color: @release.Color"></div> @release.DateFriendlyText, @release.TicketCount ticket@(release.TicketCount != 1 ? "s" : string.Empty)
                    </li>
                }
            </ul>
        }

        <ul id="lanes">
            @foreach(var lane in Model.Lanes)
            {
                <li class="lane-column">
                    <div class="column-header">@lane.Title</div>
                
                    @foreach(var ticket in lane.Tickets)
                    {
                        <div class="ticket" style="background-color: @ticket.Color">
                            <div class="ticket-id">@ticket.ExternalId</div>
                            @ticket.Title
                            <ul class="ticket-approvals">
                                <li>BAT</li>
                                <li>SEO</li>
                            </ul>
                        </div>
                    }
                </li>
            }
        </ul>
        
        <h2>Create New Release</h2>
        Select ticket(s) to begin
        <div>
            <ul id="day-selector">
                <li>Today</li>
                <li>Tomorrow</li>
                <li>Wednesday</li>
                <li>Thursday</li>
                <li>Friday</li>
                <li>Later</li>
            </ul>
        </div>
    </div>
</body>
</html>
